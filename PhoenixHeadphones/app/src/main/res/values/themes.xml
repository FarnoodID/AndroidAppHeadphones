<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoenixHeadphones" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="backgroundColor">@color/Background</item>
        <item name="colorSurface">@color/Surface</item>
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorOnBackground">@color/OnBackground</item>
        <item name="colorOnSurface">@color/OnSurface</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/OnSecondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimaryVariant">@color/OnBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!--    Manual Styles-->
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCircular">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Theme.PhoenixHeadphones.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PhoenixHeadphones.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PhoenixHeadphones.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>