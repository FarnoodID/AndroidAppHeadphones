<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false">

            <ImageView
                android:id="@+id/product_img_cart"
                android:layout_width="412dp"
                android:layout_height="229dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="2dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:clickable="true"
                android:cropToPadding="true"
                android:src="@drawable/akg"
                app:layout_constraintBottom_toTopOf="@+id/product_tv_cart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/product_tv_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#263238"
                android:gravity="left"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:text="name"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/price_tv_cart"
                app:layout_constraintStart_toStartOf="parent"></TextView>

            <TextView
                android:id="@+id/price_tv_cart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#263238"
                android:gravity="center"
                android:padding="5dp"
                android:text="price"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>